@using Shared;
@using Frontend.Components;
@using Frontend.Services.Interfaces;

@page "/lobby"

@inject IApiService ApiService

<div class="create-table-page">
	<div class="create-table">
		<p class="info">You are not at any table</p>
		<button class="create-table-button" @onclick="CreateTable">Create Table</button>
	</div>
	<div class="game-history">
		<GameHistoryComponent />
	</div>
</div>


@code {
	private Task CreateTable() =>
		ApiService.CreateBridgeTableAsync();
}
